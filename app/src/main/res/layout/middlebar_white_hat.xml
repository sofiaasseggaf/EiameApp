<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".middlebar.WhiteHat">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_top" >
            <RelativeLayout
                android:id="@+id/btnBack"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/rect"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_back"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </FrameLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_hat_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginLeft="10dp"
                android:text="FACTS"
                android:textColor="@color/fontColorGreen"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/frameLayout"
                app:layout_constraintStart_toStartOf="parent"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="          Dengan menggunakan topi putih, Anda bisa berfokus pada data yang tersedia. Pertama-tama Anda bisa
melihat informasi yang Anda punya dan pelajari dari semua informasi tersebut. Teliti semua informasi
tersebut dan cobalah untuk mengisi dan mengambil pelajaran dari informasi tersebut. Ketika
menggunakan topi ini, Anda dapat menganalisa tren-tren lama dan mengekstrapolasi data-data
historikal. Pemakai topi putih disuguhkan dengan data dan informasi yang perlu diteliti secara detail.
Ketika menemukan adanya “lubang”, topi putih perlu mencoba mengisinya."
            android:textColor="@color/fontGray"
            android:justificationMode="inter_word"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Kata Kunci Topi Putih:"
            android:textColor="@color/fontGray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Fokus Terhadap Data dan Informasi"
            android:textColor="@color/fontGray"
            android:justificationMode="inter_word"
            android:textStyle="italic"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20sp"
                android:layout_marginLeft="10sp"
                android:background="@drawable/ic_hat_white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="Selalu berpegangan atau berpedoman pada fakta dan data yang ada sebelum mengambil keputusan"
                android:textColor="@color/fontGray"
                android:justificationMode="inter_word"
                android:layout_marginLeft="10sp"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20sp"
                android:layout_marginLeft="10sp"
                android:background="@drawable/ic_hat_white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="Memiliki posisi yang netral dan sangat objektif berdasarkan fakta dan data yang ada"
                android:textColor="@color/fontGray"
                android:justificationMode="inter_word"
                android:layout_marginLeft="10sp"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</layout>