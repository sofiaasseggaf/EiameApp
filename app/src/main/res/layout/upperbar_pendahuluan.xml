<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".upperbar.Pendahuluan">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_top"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <RelativeLayout
            android:id="@+id/btnBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/rect"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/frameLayout"
            app:layout_constraintBottom_toBottomOf="@id/frameLayout">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frameLayout"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/frameLayout"
                    app:layout_constraintStart_toStartOf="parent">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_pendahuluan"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_marginLeft="10dp"
                        android:text="PENDAHULUAN"
                        android:textColor="#0F0F0F"
                        android:textSize="18sp"
                        app:layout_constraintTop_toBottomOf="@id/frameLayout"
                        app:layout_constraintStart_toStartOf="parent"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Electronic Information of Adaptation and Mitigation Education (EI-AME) merupakan bahan ajar dalam
bentuk media digital sebagai sumber informasi untuk mahasiswa dalam memahamai dan memperkuat khasanah
ilmu mengenai pendidikan lingkungan hidup. EI-AME berisi informasi-informasi berkaitan dengan pendidikan
adaptasi dan mitigasi. Capaian Pembelajaran Lulusan Kompetensi Sosial yang hendak dicapai yaitu menyebarkan
informasi ilmiah secara komunikatif dan bertanggung jawab mengenai lingkungan budaya, membangun jaringan,
dan berkolaborasi. Berdasarkan hal tersebut, maka EI-AME hadir dengan perpaduan pendekatan six thinking hats
Edward De Bono. Di dalam EI-AME ini terdapat alur pendekatan six thinking hats yang akan digunakan cara
pengambilan keputusannya atau cara pandangnya dalam menganlisis kasus tertentu berkaitan dengan perubahan
iklim. Harapannya EI-AME ini dapat digunakan dan dimanfaatkan oleh mahasiswa secara maksimal dan dapat
menjadi media yang mampu meningkatkan kecakapan komunikasi mahasiswa"
                    android:textColor="#0F0F0F"
                    android:textSize="12sp"
                    android:paddingHorizontal="20dp"
                    android:justificationMode="inter_word"/>
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Selamat berselancar di EI-AME"
                    android:textColor="#0F0F0F"
                    android:textSize="12sp"/>
                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="20dp"
                    android:background="#F0F1F5"/>
                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Penyusun EI-AME"
                        android:textColor="#0F0F0F"
                        android:textSize="12sp" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rect_green">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="1.  Prof. Dr. Agung Purwanto, M.Si."
                            android:textColor="#0F0F0F"
                            android:textSize="10sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/rect_green">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="2.  Dr. Setia Budi, M.Sc."
                            android:textColor="#0F0F0F"
                            android:textSize="10sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/rect_green">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="3.  Sisean Baga, M.Pd."
                            android:textColor="#0F0F0F"
                            android:textSize="10sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/rect_green">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="4.  Robert Kurniawan, M.Si."
                            android:textColor="#0F0F0F"
                            android:textSize="10sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/rect_green">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="5.  Alton Endarwanto Hadi S., S.T., M,Si."
                            android:textColor="#0F0F0F"
                            android:textSize="10sp" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Developed by"
                        android:textColor="#5B5B5B"
                        android:textSize="10sp"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_logo_scom"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="EI-AME App v1.0"
                        android:textColor="#5B5B5B"
                        android:textSize="10sp"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>